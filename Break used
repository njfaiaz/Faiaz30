available = 8

a = int(input("How many apple do you need: "))
i = 1

# while i <= a:
#     if i > available:
#         print('Sorry, Out of Stock')
#         break
#     print('apple', i)
#     i +=1   

'''
solve this problem  by using for loop
'''

for i in range(a):
    if i >= available:
        print("sorry Out of stock")
        break
    print('apple :', i)
    i += 1
